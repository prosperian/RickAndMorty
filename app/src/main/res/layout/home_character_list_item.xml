<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:minHeight="@dimen/_100sdp"
    app:cardBackgroundColor="#676767"
    app:cardCornerRadius="@dimen/_15ssp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/_100sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_home_character_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_character_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:maxLines="2"
            android:paddingEnd="@dimen/_8sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/iv_home_character_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_home_character_status"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:background="@color/green"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_character_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/tv_home_character_name"
            app:layout_constraintTop_toTopOf="@+id/tv_home_character_status"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.RoundCorner" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_character_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:maxLines="2"
            android:paddingEnd="@dimen/_4sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/subtitle_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/iv_home_character_status"
            app:layout_constraintTop_toBottomOf="@id/tv_home_character_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_character_species_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/species_title"
            android:textColor="#B6B6B6"
            android:textSize="@dimen/small_subtitle_size"
            app:layout_constraintStart_toStartOf="@id/iv_home_character_status"
            app:layout_constraintTop_toBottomOf="@id/tv_home_character_status" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_character_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/small_subtitle_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_home_character_species_title"
            app:layout_constraintTop_toBottomOf="@id/tv_home_character_species_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_character_gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_title"
            android:textColor="#B6B6B6"
            android:textSize="@dimen/small_subtitle_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_home_character_species_title"
            app:layout_constraintTop_toTopOf="@id/tv_home_character_species_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_character_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/small_subtitle_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tv_home_character_gender_title"
            app:layout_constraintTop_toBottomOf="@id/tv_home_character_species_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>